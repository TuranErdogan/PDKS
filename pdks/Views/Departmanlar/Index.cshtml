@model IEnumerable<pdks.Models.Departmanlar>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Departman Ekle", "Ekle")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmanAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmanAdi)
        </td>
        <td>
            @Html.ActionLink("Guncelle", "Guncelle", new { id=item.Id }) |
            @Html.ActionLink("Detay", "Detay", new { id=item.Id }) |
            @Html.ActionLink("Sil", "Sil", new { id=item.Id })
        </td>
    </tr>
}

</table>
